<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.kingdooker.drawnote.Display
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main" />
    <include
        android:id="@+id/toolbar_modify_brush"
        layout="@layout/toolbar_modify_brush"
        android:visibility="gone" />
    <include
        android:id="@+id/toolbar_modify_eraser"
        layout="@layout/toolbar_modify_eraser"
        android:visibility="gone" />
    <include
        android:id="@+id/toolbar_modify_text"
        layout="@layout/toolbar_modify_text"
        android:visibility="gone" />

    <include
        android:id="@+id/toolbar_menu"
        layout="@layout/toolbar_menu"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>